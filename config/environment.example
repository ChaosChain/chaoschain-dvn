# ChaosChain DVN PoC - Environment Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# BLOCKCHAIN CONFIGURATION
# ==========================================

# Your private key for signing transactions (DO NOT commit this!)
PRIVATE_KEY=your_private_key_here

# Alternative: Use a mnemonic phrase
# MNEMONIC=your twelve word mnemonic phrase here

# Sepolia RPC URL (default is included in constants.py)
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your_api_key_here

# ==========================================
# IPFS CONFIGURATION
# ==========================================

# IPFS node URL (default: local node)
IPFS_NODE_URL=/ip4/127.0.0.1/tcp/5001

# For remote IPFS nodes:
# IPFS_NODE_URL=/dns4/ipfs.infura.io/tcp/5001/https

# ==========================================
# AI MODEL CONFIGURATION
# ==========================================

# LangChain AI Model API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Model preferences
LLM_MODEL=anthropic:claude-3-7-sonnet-latest
# Alternative: LLM_MODEL=openai:gpt-4-turbo

# ==========================================
# LOGGING AND DEBUGGING
# ==========================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable detailed transaction logging
VERBOSE_TRANSACTIONS=false

# ==========================================
# AGENT CONFIGURATION
# ==========================================

# Worker Agent ID (will be generated if not provided)
WORKER_AGENT_ID=wa_demo_001

# Verifier Agent ID (will be generated if not provided) 
VERIFIER_AGENT_ID=va_demo_001

# Agent behavior settings
AUTO_REGISTER_AGENTS=true
AUTO_STAKE_VERIFIERS=true

# ==========================================
# DEMO CONFIGURATION
# ==========================================

# Demo store for testing
DEMO_STORE_ID=store_123

# Enable demo mode (uses simulated data)
DEMO_MODE=true

# Demo scenarios to run
DEMO_SCENARIOS=inventory_verification,stock_report

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Enable development mode features
DEV_MODE=false

# Skip expensive operations in dev mode
SKIP_BLOCKCHAIN_OPS=false

# Fast mode (reduced timeouts for testing)
FAST_MODE=false 